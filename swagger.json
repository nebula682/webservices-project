{
  "swagger": "2.0",
  "info": {
    "title": "Vehicles and Drivers API",
    "description": "API for managing vehicles and drivers",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/trips/": {
      "get": {
        "tags": ["trips"],
        "description": "Get all trips",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "204": { "description": "No Content" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["trips"],
        "description": "Create a new trip",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "driverId": { "type": "string", "example": "507f1f77bcf86cd799439011" },
                "vehicleId": { "type": "string", "example": "507f191e810c19729de860ea" },
                "startLocation": { "type": "string", "example": "Harare" },
                "endLocation": { "type": "string", "example": "Bulawayo" },
                "startTime": { "type": "string", "format": "date-time", "example": "2025-06-15T08:30:00Z" },
                "endTime": { "type": "string", "format": "date-time", "example": "2025-06-15T12:30:00Z" },
                "status": { "type": "string", "example": "scheduled" }
              },
              "required": ["driverId", "vehicleId", "startLocation", "endLocation", "startTime", "endTime", "status"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/trips/{id}": {
      "get": {
        "tags": ["trips"],
        "description": "Get a single trip by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["trips"],
        "description": "Update a trip",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "driverId": { "type": "string" },
                "vehicleId": { "type": "string" },
                "startLocation": { "type": "string" },
                "endLocation": { "type": "string" },
                "startTime": { "type": "string", "format": "date-time" },
                "endTime": { "type": "string", "format": "date-time" },
                "status": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["trips"],
        "description": "Delete a trip",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
